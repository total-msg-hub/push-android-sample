<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:background="@color/_F5F5F5"
        android:id="@+id/listrow"
        android:layout_width="fill_parent"
        android:layout_height="56dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <ImageView
            android:id="@+id/deleteBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"

            android:src="@drawable/check_off" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/body"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.65"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" >

                <TextView
                    android:id="@+id/content_title"
                    android:layout_width="match_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="타이틀입니다.타이틀입니다.타이틀입니다."
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="테스트입니다테스트입니다테스트입니다."
                    android:textColor="#333333"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="3.0dip"
                android:layout_weight="0.35"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/updateDate"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="75"
                    android:gravity="center"
                    android:text="2014-08-21\n12:12"
                    android:textColor="#333333"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/newicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                   android:layout_gravity="center"
                    android:background="@drawable/new_icon"
                    android:gravity="center"
                    android:paddingBottom="7dip"
                    android:text="N"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>